<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Editar Producto</title>
    <link rel="stylesheet" href="/css/productos2.css" />
  </head>
  <body>
    <h1>Editar Producto</h1>

    <% if (typeof alert !== 'undefined' && alert) { %>
      <div class="alert <%= alert.alertIcon %>">
        <strong><%= alert.alertTitle %></strong>: <%= alert.alertMessage %>
      </div>
    <% } %>

    <form action="/actualizar-producto/<%= producto.id_producto %>" method="POST">
      <label for="descripcion">Descripción:</label>
      <input type="text" id="descripcion" name="descripcion" value="<%= producto.descripcion %>" required><br>

      <label for="precio_venta">Precio de Venta:</label>
      <input type="number" id="precio_venta" name="precio_venta" value="<%= producto.precio_venta %>" required><br>

      <label for="precio_compra">Precio de Compra:</label>
      <input type="number" id="precio_compra" name="precio_compra" value="<%= producto.precio_compra %>" required><br>

      <label for="stock">Stock:</label>
      <input type="number" id="stock" name="stock" value="<%= producto.stock %>" required><br>

      <label for="fecha_elaboracion">Fecha de Elaboración:</label>
      <input type="date" id="fecha_elaboracion" name="fecha_elaboracion" value="<%= producto.fecha_elaboracion %>" required><br>

      <label for="fecha_vencimiento">Fecha de Vencimiento:</label>
      <input type="date" id="fecha_vencimiento" name="fecha_vencimiento" value="<%= producto.fecha_vencimiento %>" required><br>

      <button type="submit">Actualizar Producto</button>
    </form>
  </body>
</html>
